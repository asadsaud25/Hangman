<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_result"
    tools:context=".fragments.result">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:text="Mission Failed !!"
        android:textSize="50sp"
        android:fontFamily="@font/irish_grover_regular"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:src="@drawable/v_bar1"
        android:layout_marginTop="150dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.25"/>

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/h_bar2"
        android:layout_marginTop="170dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.45"/>

    <ImageView
        android:id="@+id/img_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/d_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="100dp"
        android:layout_marginTop="110dp"
        android:rotation="45"
        android:alpha="0.15"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_2"
        android:layout_marginTop="-40dp"
        android:src="@drawable/hangedman"
        android:alpha="0.15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/irish_grover_regular"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:text="Correct Word:"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="310dp">

        <TextView
            android:id="@id/l1"
            android:layout_row="0"
            android:layout_column="0"
            android:fontFamily="@font/inter_extra_bold"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:layout_width="32dp"
            android:gravity="center_horizontal"
            android:background="@drawable/word_frame_r"
            android:layout_marginStart="3dp"/>

        <TextView
            android:id="@+id/l2"
            android:layout_row="0"
            android:layout_column="1"
            android:fontFamily="@font/inter_extra_bold"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:layout_width="32dp"
            android:gravity="center_horizontal"
            android:background="@drawable/word_frame_r"
            android:layout_marginStart="3dp"/>

        <TextView
            android:id="@+id/l3"
            android:layout_row="0"
            android:layout_column="2"
            android:fontFamily="@font/inter_extra_bold"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:layout_width="32dp"
            android:gravity="center_horizontal"
            android:background="@drawable/word_frame_r"
            android:layout_marginStart="3dp"/>

        <TextView
            android:id="@+id/l4"
            android:layout_row="0"
            android:layout_column="3"
            android:fontFamily="@font/inter_extra_bold"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:layout_width="32dp"
            android:gravity="center_horizontal"
            android:background="@drawable/word_frame_r"
            android:layout_marginStart="3dp"/>

        <TextView
            android:id="@+id/l5"
            android:layout_row="0"
            android:layout_column="4"
            android:fontFamily="@font/inter_extra_bold"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:layout_width="32dp"
            android:gravity="center_horizontal"
            android:background="@drawable/word_frame_r"
            android:layout_marginStart="3dp"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp">

        <TextView
            android:id="@+id/scoretext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="42sp"
            android:fontFamily="@font/irish_grover_regular"
            android:textColor="@color/white"
            android:text="Score:"/>

        <TextView
            android:id="@+id/resultScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="42sp"
            android:fontFamily="@font/irish_grover_regular"
            android:textColor="@color/white"
            android:text="00"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="170dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/home_btn"
            android:layout_marginEnd="15dp"/>

        <Button
            android:id="@+id/play_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            android:textSize="24sp"
            android:fontFamily="@font/inter_extra_bold"
            android:text="Play Again" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>